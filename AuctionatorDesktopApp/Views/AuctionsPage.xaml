<Page x:Class="AuctionatorDesktopApp.Views.AuctionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuctionatorDesktopApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuctionsPage">

    <Grid>
        <ListBox x:Name="lbAuctions"  HorizontalAlignment="Left" Height="319"  VerticalAlignment="Top" Width="736" Margin="37,121,0,0" />
        <TextBox x:Name="tbBid" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Bid" VerticalAlignment="Top" Width="136" Margin="461,68,0,0"/>
        <ProgressBar x:Name="pbUpdate"  HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="324" Margin="37,68,0,0"/>
        <Label x:Name="lbProgress" PreviewMouseDown="UpdateClick" Content="Progres" HorizontalContentAlignment="Center"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="37,68,0,0" Width="324" Height="23"/>
        <Button Content="Make bid" Click="MakeBidClick" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="684,68,0,0" Height="23"/>
        

    </Grid>
</Page>
